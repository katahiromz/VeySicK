100 SCREEN 3:CONSOLE 0,25,0,1:WIDTH 80,25:CLS 3:COLOR 7,0,,7,1
110 DEFINT A-Z:DEFSNG T
120 DEF FNPERSE.X(X,Y,Z)=X*100/(100+Z)
130 DEF FNPERSE.Y(X,Y,Z)=Y*100/(100+Z)
140 X=0:Y=0:Z=0:T=0:SCR.SW=0:COL=4
150 *LOOP
160 IF SCR.SW=0 THEN SCREEN 3,,0,17 ELSE SCREEN 3,,1,1
170 SCR.SW=NOT SCR.SW
180 *DRAWING
190 CLS 2:LINE(0,0)-(639,199),1,BF:LINE(0,200)-(639,399),2,BF
200 PX=FNPERSE.X(X,Y,Z):PY=FNPERSE.Y(X,Y,Z)
210 CIRCLE(PX,PY),Z,,,,,F,4:CIRCLE(PX,PY+Z*0.1),Z/2,,,,,F,COL
220 CIRCLE(PX,FNPERSE.Y(X,Y,-Z)),10,,,,,F,COL
230 LINE(PX-2,PY)-(PX+2,FNPERSE.Y(X,Y,-Z)),0,BF
240 *MOVE
250 X=320+60*COS(T):Y=200:Z=40+30*SIN(3*T):COL=(COL+3)MOD 7+1
260 T=T+0.1
270 GOTO *LOOP
